{% extends "base.html" %}

{% block app_content %}
<div class="container">
    <div id="loginbox"
          {% if mode =='login' %}
          style="margin-top:50px"
          {% else %}
          style="display:none; margin-top:50px"
          {% endif %}
          class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">Sign In</div>
                    <div style="float:right; font-size: 80%; position: relative; top:-10px">
                      <a href="#" onClick="$('#loginbox').hide(); $('#resetbox').show();event.preventDefault();">Forgot password?</a></div>
                      <!-- <a href="{{ url_for('auth.reset_password_request') }}">Forgot password?</a></div>-->
                </div>

                <div style="padding-top:30px" class="panel-body" >

                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <form id="loginform" class="form-horizontal" role="form" method="post" action="{{url_for('auth.login')}}" novalidate>
                        {{ form.hidden_tag() }}
                        <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    {{form.username(id="login-username", class_="form-control", placeholder="username or email" ) }}
                                </div>

                        <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    {{form.password(id="login-password",class_="form-control",placeholder="password")}}
                                </div>

                        <div class="input-group">
                                  <div class="checkbox">
                                    <label>
                                      {{form.remember_me(id="login-remember")}}{{ form.remember_me.label}}
                                    </label>
                                  </div>
                                </div>

                            <div style="margin-top:10px" class="form-group">
                                <!-- Button -->

                                <div class="col-sm-12 controls">
                                  {{ form.submit(class_="btn btn-success", id="btn-login")}}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 control">
                                    <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                        Don't have an account!
                                    <a href="#" onClick="$('#loginbox').hide(); $('#signupbox').show();event.preventDefault();">
                                        Sign Up Here
                                    </a>
                                    </div>
                                </div>
                            </div>
                        </form>



                    </div>
                </div>
    </div>
    <div id="signupbox"
          {% if mode =='signup' %}
          style="margin-top:50px"
          {% else %}
          style="display:none; margin-top:50px"
          {% endif %}
          class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">Sign Up</div>
                            <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show();event.preventDefault();">Sign In</a></div>
                        </div>
                        <div class="panel-body" >
                            <form id="signupform" class="form-horizontal" role="form" method="post" action="{{url_for('auth.register')}}">
                                {{ rform.hidden_tag() }}
                                <div class="form-group">
                                    <label for="username" class="col-md-3 control-label">Username</label>
                                    <div class="col-md-9">
                                        {{rform.username(class_="form-control",placeholder="Username")}}
                                    </div>
                                </div>
                                {% if rform.username.errors|length > 0 %}
                                <div id="signupalert" class="alert alert-danger">
                                    {% for error in rform.username.errors %}
                                    <span>{{ error }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}

                                <div class="form-group">
                                    <label for="email" class="col-md-3 control-label">Email</label>
                                    <div class="col-md-9">
                                        {{rform.email(class_="form-control",placeholder="Email Address")}}
                                    </div>
                                </div>
                                {% if rform.email.errors|length > 0 %}
                                <div id="signupalert" class="alert alert-danger">
                                    {% for error in rform.email.errors %}
                                    <span>{{ error }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}

                                <div class="form-group">
                                    <label for="firstname" class="col-md-3 control-label">First Name</label>
                                    <div class="col-md-9">
                                        {{rform.first_name(class_="form-control",placeholder="First Name")}}
                                    </div>
                                </div>
                                {% if rform.first_name.errors|length > 0 %}
                                <div id="signupalert" class="alert alert-danger">
                                    {% for error in rform.first_name.errors %}
                                    <span>{{ error }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}

                                <div class="form-group">
                                    <label for="lastname" class="col-md-3 control-label">Last Name</label>
                                    <div class="col-md-9">
                                        {{rform.last_name(class_="form-control",placeholder="Last Name")}}
                                    </div>
                                </div>
                                {% if rform.last_name.errors|length > 0 %}
                                <div id="signupalert" class="alert alert-danger">
                                    {% for error in rform.last_name.errors %}
                                    <span>{{ error }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}

                                <div class="form-group">
                                    <label for="password" class="col-md-3 control-label">Password</label>
                                    <div class="col-md-9">
                                        {{rform.password(class_="form-control",placeholder="Password")}}
                                    </div>
                                </div>
                                {% if rform.password.errors|length > 0 %}
                                <div id="signupalert" class="alert alert-danger">
                                    {% for error in rform.password.errors %}
                                    <span>{{ error }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}

                                <div class="form-group">
                                    <label for="password" class="col-md-3 control-label">Repeat Password</label>
                                    <div class="col-md-9">
                                        {{rform.password2(class_="form-control",placeholder="Repeat Password")}}
                                    </div>
                                </div>
                                {% if rform.password2.errors|length > 0 %}
                                <div id="signupalert" class="alert alert-danger">
                                    {% for error in rform.password2.errors %}
                                    <span>{{ error }}</span>
                                    {% endfor %}
                                </div>
                                {% endif %}

                                <div class="form-group">
                                    <!-- Button -->
                                    <div class="col-md-offset-3 col-md-9">
                                        {{ rform.submit(class_="btn btn-info", id="btn-signup")}}
                                        <!-- <button id="btn-signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>-->
                                    </div>
                                </div>

                            </form>
                         </div>
                    </div>




         </div>
         <div id="resetbox"
               {% if mode =='reset' %}
               style="margin-top:50px"
               {% else %}
               style="display:none; margin-top:50px"
               {% endif %}
               class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                         <div class="panel panel-info">
                             <div class="panel-heading">
                                 <div class="panel-title">Forgot password</div>
                                 <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#resetbox').hide(); $('#loginbox').show();event.preventDefault();">Sign In</a></div>
                             </div>
                             <div class="panel-body" >
                                 <form id="resetform" class="form-horizontal" role="form" method="post" action="{{url_for('auth.reset_password_request')}}">

                                     {{ pform.hidden_tag() }}
                                     <div class="form-group">
                                         <label for="email" class="col-md-1 control-label">Email</label>
                                         <div class="col-md-11">
                                             {{pform.email(class_="form-control",placeholder="Email Address")}}
                                         </div>
                                     </div>
                                     {% if pform.email.errors|length > 0 %}
                                     <div id="signupalert" class="alert alert-danger">
                                         {% for error in pform.email.errors %}
                                         <span>{{ error }}</span>
                                         {% endfor %}
                                     </div>
                                     {% endif %}

                                     <div class="form-group">
                                         <!-- Button -->
                                         <div class="col-md-offset-1 col-md-9">
                                             {{ pform.submit(class_="btn btn-primary", id="btn-reset")}}
                                             <!-- <button id="btn-signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>-->
                                         </div>
                                     </div>

                                 </form>
                              </div>
                         </div>




              </div>
  </div>
{% endblock %}
